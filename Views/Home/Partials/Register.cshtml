@{ ViewData["Title"] = "Home Page"; } 
@model wedding_planner.Models.RegisterViewModels
<div>
    <h3>Register</h3>
    <form asp-controller="Home" asp-action="RegisterUser" method="post">
        <label asp-for="first_name"></label>
        <input asp-for="first_name">
        <span asp-validation-for="first_name"></span>
        <br>
        <label asp-for="last_name"></label>
        <input asp-for="last_name">
        <span asp-validation-for="last_name"></span>
        <br>
        <label asp-for="email"></label>
        <input asp-for="email" />
        <span asp-validation-for="email"></span>
        <br>
        <label asp-for="password"></label>
        <input asp-for="password" />
        <span asp-validation-for="password"></span>
        <br>
        <label asp-for="conPassword"></label>
        <input asp-for="conPassword" />
        <span asp-validation-for="conPassword"></span>
        <br>
        <button type="submit">Submit</button>
    </form>
    <br>
</div>